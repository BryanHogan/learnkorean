---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import bookLogo from "/src/assets/logos/TLK-Landing-Logo.png";
import Button from "../components/Button.astro";
import CardGrid from "../components/CardGrid.astro";
import Card from "../components/Card.astro";
---

<BaseLayout title="Welcome to Astro.">
	<main>
		<section class="landing-page-intro-container">
			<div class="first-group-container">
				<Image
					src={bookLogo}
					alt="Menu bar icon simple soft white color only"
					class="logo-landing-page"
					width={bookLogo.width}
					height={bookLogo.height}
				/>
				<div class="text-group">
					<h1>
						Welcome! 안녕하세요!<br />Start learning Korean now.
					</h1>
					<p>
						Your helper to learn Korean. Precise, reliant and
						simple.
					</p>
				</div>
			</div>
			<ul class="button-group-layout">
				<li>
					<Button
						buttonStyle="gradient large grow"
						href="#"
						text="Get Started Learning"
					/>
				</li>
				<li>
					<Button
						buttonStyle="side-color large grow fixed-medium-width"
						href="#"
						text="Guides"
					/>
				</li>
				<li>
					<Button
						buttonStyle="side-color large grow fixed-medium-width"
						href="#"
						text="Updates"
					/>
				</li>
			</ul>
		</section>
		<article style="padding-inline: 1rem">
			<CardGrid>
				<Card title="Featured Post" icon="">
					<p>We all started somewhere, this is your chance. Start with Chapter 1.</p>
					<Button
						buttonStyle="accent-color medium grow"
						href="#"
						text="Updates"
					/>
				</Card>
				<Card title="Featured Post" icon="">
					<p>GKS Graduate 2024 has opened its doors and it’s your time to get paid to study in Korea!</p>
					<Button
						buttonStyle="accent-color medium grow"
						href="#"
						text="Updates"
					/>
				</Card>
				<Card title="Featured Post" icon="">
					<p>Some text here for explanation</p>
					<Button
						buttonStyle="accent-color medium grow"
						href="#"
						text="Updates"
					/>
				</Card>
				<Card title="Featured Post" icon="">
					<p>Some text here for explanation</p>
					<Button
						buttonStyle="accent-color medium grow"
						href="#"
						text="Updates"
					/>
				</Card>
			</CardGrid>
		</article>
	</main>
</BaseLayout>

<style>
	.landing-page-intro-container {
		min-height: calc(90svh - var(--navbar-height));
		padding-top: 2em;
		padding-inline: 1em;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		& .first-group-container {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}
		& .text-group {
			& > p {
				padding-top: 1em;
			}
		}
		& .logo-landing-page {
			height: 130px;
			width: auto;
		}
	}
	.button-group-layout {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		padding-top: 2em;
	}
	@media only screen and (max-width: 699px) {
		.button-group-layout :first-child {
			width: 100%;
			align-self: center;
			display: flex;
			justify-content: center;
		}
		.landing-page-intro-container {
			& .first-group-container {
			}
			& .text-group {
				/* Might need to be put elsewhere */
				word-break: keep-all;
				line-break: strict;
			}
			& .logo-landing-page {
				margin-bottom: 2em;
			}
		}
	}
	@media only screen and (min-width: 700px) {
		.landing-page-intro-container {
			& .first-group-container {
				flex-direction: row-reverse;
				align-items: flex-start;
			}
			& .logo-landing-page {
				padding-left: 1em;
			}
		}
		.button-group-layout {
			gap: 1em;
		}
	}
</style>
