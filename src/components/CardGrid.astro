---

const {gtcolumns = "1fr 1fr 1fr"} = Astro.props;
---

<ul>
    <slot />
</ul>

<style define:vars={{ gtcolumns }}>
    ul {
        display: grid;
        grid-template-columns: var(--gtcolumns);
        grid-template-rows: auto;
        justify-items: center;
        list-style: none;
        max-width: 1500px;
        gap: var(--space-l);
        margin-inline: auto;
    }
    @media only screen and (max-width: 699px) {
        ul {grid-template-columns: 1fr;}
    }
    .many-columns {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
</style>
