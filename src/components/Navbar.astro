---
import navItems from "../data/navItems";
---

<nav>
    <div class="nav-container">
        <ul class="container-priority-items">
            <li><a href="#">Home</a></li>
            <li><a href="#">Thing</a></li>
        </ul>

        <div class="dropdown-container">
            <img
                src="/icons/Menu-Icon.svg"
                class="dropdown-menu-icon"
                alt="Menu bar icon simple soft white color only"
                width="18"
                height="14"
            />
            <ul class="dropdown-menu">
                {
                    navItems.map((item) => (
                        <li>
                            <a href={item.href}>{item.text}</a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>

<style>
    nav {
        width: 100%;
        height: 50px;
    }
    a {
        text-decoration: none;
    }
    .nav-container {
        position: fixed;
        width: 100%;
        height: 50px;
        display: flex;
        flex-direction: row;
        & ul,
        .dropdown-container {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        & ul li {
            padding: 2px 9px;
        }
    }
    .container-priority-items {
        margin-right: auto;
    }
    li {
        transition: all 300ms;
        color: var(--color-side-1);
        filter: brightness(0) saturate(100%) invert(57%) sepia(6%)
            saturate(183%) hue-rotate(169deg) brightness(92%) contrast(92%);
        transform: scale(1.001);
        font-size: 1.125rem;
    }
    li:hover {
        transition: all 200ms;
        filter: brightness(0) saturate(100%) invert(86%) sepia(2%)
            saturate(892%) hue-rotate(187deg) brightness(114%) contrast(88%);
        transform: scale(1.1) translate3d(0, 0, 0) perspective(1px);
    }

    @media only screen and (max-width: 699px) {
        .dropdown-container .dropdown-menu {
            display: none;
            flex-direction: column;
            align-items: flex-start;
            top: 0px;
            right: 0px;
            position: absolute;
            padding-top: 50px; /* This should equal the total Navbar height */
            background-color: var(--color-main-1);
            animation: fade-in 100ms 1;
            & li {
                padding: 10px 10px;
            }
        }
        .dropdown-container:hover .dropdown-menu {
            display: flex;
        }
        .dropdown-container:not(:hover) .dropdown-menu {
            animation: fade-out 200ms 1 ease-out;
        }
        .dropdown-menu-icon {
            margin-right: 10px;
            z-index: 2;
        }
    }
    @media only screen and (min-width: 700px) {
        .dropdown-menu-icon {
            display: none;
        }
    }

    @keyframes fade-in {
        0% {
            opacity: 0;
            transform: translate(120px);
        }
        25% {
        }
        75% {
        }
        100% {
            opacity: 1;
        }
    }
    @keyframes fade-out {
        0% {
            opacity: 1;
            display: flex;
        }
        25% {
        }
        75% {

        }
        100% {
            opacity: 0;
            transform: translate(120px);
        }
    }
</style>
