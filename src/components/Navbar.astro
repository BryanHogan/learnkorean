---
import navItems from "../data/navItems";
---

<nav>
    <div class="nav-container">
        <ul class="container-priority-items">
            <li><a href="#">Home</a></li>
        </ul>

        <ul class="dropdown-container">
            {
                navItems.map((item) => (
                    <li>
                        <a href={item.href}>{item.text}</a>
                    </li>
                ))
            }
        </ul>
    </div>
</nav>
<style>
    nav {
        width: 100%;
        height: 50px;
    }
    .nav-container {
        position: fixed;
        background-color: grey;
        width: 100%;
        height: 50px;
        display: flex;
        flex-direction: row;
    }
    .nav-container ul {
        display: flex;
        flex-direction: row;
    }
    .container-priority-items {
        margin-right: auto;
    }
</style>
