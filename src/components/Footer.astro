<style>
    footer {
        padding-inline: 0.5rem;
        padding-top: 2rem; /* this sets small pages over 100% */
    }
    footer,
    a,
    p {
        color: var(--color-main-3);
        font-size: 1rem;
        transition: color 200ms;
    }
    footer > ul {
        width: 100%;
        max-width: 1800px;
        margin-inline: auto;
        min-height: var(--footer-height);
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: space-around;
        align-items: flex-end;
    }
    footer > ul > li {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        flex-wrap: wrap;
        flex-grow: 1;
        min-width: 200px;
        flex-basis: 0;
        flex-grow: 1;
        padding-bottom: 2rem;
    }
    a:hover, a:focus {
        color: var(--color-side-1);
    }
    .second-list-container {
        gap: 11px;
    }
    .third-list-container > ul{
        display: flex;
        flex-wrap: wrap;
        gap: 0px 11px;
        justify-content: center;
        & li {
            width: max-content;
        }
    }
</style>
